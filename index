<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>coucou</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      height: 100vh;
      background-color: #000;
      overflow: hidden;
      position: relative;

      --mouse-x: 50vw;
      --mouse-y: 50vh;

      background:
        radial-gradient(circle 200px at var(--mouse-x) var(--mouse-y),
          rgba(0, 255, 255, 0.1),
          transparent 100%),
        #000;

      transition: background 0.1s ease;
    }

    .led-border {
      position: absolute;
      background-color: cyan;
      box-shadow: 0 0 12px 5px cyan;
      animation: glow 4s infinite ease-in-out;
      z-index: 10;
    }

    .top, .bottom {
      width: 100%;
      height: 3px;
      left: 0;
    }

    .left, .right {
      height: 100%;
      width: 3px;
      top: 0;
    }

    .top {
      top: 0;
    }

    .bottom {
      bottom: 0;
    }

    .left {
      left: 0;
    }

    .right {
      right: 0;
    }

    @keyframes glow {
      0%, 100% {
        box-shadow: 0 0 10px 5px cyan;
      }
      50% {
        box-shadow: 0 0 14px 6px cyan;
      }
    }
  </style>
</head>
<body>
  <div class="led-border top"></div>
  <div class="led-border bottom"></div>
  <div class="led-border left"></div>
  <div class="led-border right"></div>

  <script>
    document.body.addEventListener('mousemove', e => {
      document.body.style.setProperty('--mouse-x', e.clientX + 'px');
      document.body.style.setProperty('--mouse-y', e.clientY + 'px');
    });
  </script>
</body>
</html>
